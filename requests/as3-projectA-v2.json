{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.0.0",
    "id": "example-declaration-01",
    "label": "Sample 1",
    "remark": "Simple HTTP application with round robin pool",
    "Project_A": {
      "class": "Tenant",
      "PodInfo": {
        "class": "Application",
        "podinfo_pool": {
          "class": "Pool",
          "monitors": [
            "http"
          ],
          "members": [
            {
              "servicePort": 9898,
              "serverAddresses": [
                "10.1.10.5"
              ]
            }
          ]
        },
        "podinfo_http": {
          "class": "Service_HTTP",
          "virtualAddresses": [
            "10.1.20.100"
          ],
          "iRules": [
            {
              "bigip": "/Common/_sys_https_redirect"
            }
          ]
        },
        "podInfo_https": {
          "class": "Service_HTTPS",
          "virtualAddresses": [
            "10.1.20.100"
          ],
          "pool": "podinfo_pool",
          "redirect80": false,
          "serverTLS": {
            "bigip": "/Common/clientssl"
          }
        }
      }
    }
  }
}